/* pages/info/pages/examination/detail/detail.wxss */
.yt-wrap{
	font-size: 30rpx;
	color: #7a7a7a;
}
/*顶栏*/
.wrap-top{
	position: relative;
	padding:16rpx 0 16rpx;
	background: #fff;
	text-align: center;
	z-index: 2;
}
.wrap-top .lz-share-grey-ico{
	position: absolute;
	top:16rpx;
	right: 30rpx;
}
.wrap-top_middle{
	position: relative;
	height: 196rpx;
}
.wrap-circle_sm{
	width:119rpx;
	height:109rpx;
	padding-top:10rpx;
	font-size:34rpx;
	color:#5394ff;
	border:1rpx solid #b2b2b2;
	border-radius:100%;
	background: #fff;
	z-index: 100;
}
.wrap-circle_left{
	position: absolute;
	top:5rpx;
	left: 90rpx;
}
.wrap-circle_right{
	position: absolute;
	right: 74rpx;
	bottom:0;
}
.wrap-circle_lg{
	position: absolute;
	top:20rpx;
	left: 285rpx;
	width:154rpx;
	height:154rpx;
	border-radius:100%;
	border:10rpx solid #59a1f4;
	background: #59a1f4;
	z-index: 100;
	overflow: hidden;
}
.avator-img_md{
	width:154rpx;
	height:154rpx;
	border-radius:50%;
}
.Line-dotted_top{
	position: absolute;
	top:60rpx;
	right:140rpx;
	width:200rpx;
	height: 100rpx;
	border: 0 dashed transparent;
	border-top: 4rpx dashed #59a1f4;
	-moz-border-radius:50% 50% 0 0;
	-webkit-border-radius:50% 50% 0 0;
	border-radius:50% 50% 0 0;
	z-index: 2;
}
.Line-dotted_bottom{
	position: absolute;
	top:30rpx;
	left:138rpx;
	width:200rpx;
	height:100rpx;
	border: 0 dashed transparent;
	border-bottom: 4rpx dashed #59a1f4;
	-moz-border-radius: 0 0 50% 50%;
	-webkit-border-radius:0 0 50% 50%;
	border-radius:0 0 50% 50%;
	z-index: 2;
}
.wrap-flex_between{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
	justify-content: space-between;
}
.cont-box{
	padding:15rpx 0 15rpx;
	background: #fff;
	border-top:1rpx dashed #e5e5e5;
	font-size:28rpx;
	color:#7a7a7a;
}
.cont-left{
	width: 156rpx;
	padding:5rpx 0;
	margin-right:10rpx;
	text-align: right;
}
/*健康评估报告*/
.wrap-middle_assess{
	width: 620rpx;
	margin:34rpx auto;
	padding:28rpx 40rpx;
	border-radius:10rpx;
	background-image:linear-gradient(-138deg, #59a1f4 0%, #76cfff 100%);
	box-shadow:4rpx 4rpx 10rpx 0 rgba(0,0,0,0.06);
}
.wrap-title_assess{
	font-size:38rpx;
	color:#fff;	
}
/*健康检查结果*/
.wrap-bottom{
	border:1rpx soild #e8e8e8;
	background-color: #fff;
	font-size:30rpx;
	color:#7a7a7a;
}
.wrap-title{
	position: relative;
	padding:30rpx 58rpx;
	font-size:34rpx;
	font-weight: 600;
	color:#000;
}
.wrap-title:before{
    content: " ";
    position: absolute;
    left:39rpx;
    top:50%;
    width:22rpx;
    height:40rpx;
    background:#5394ff;
    border-radius:8rpx;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(0.5) translateY(-50%); /*压缩及垂直居中*/
    transform: scaleX(0.5) translateY(-50%);
}
.wrap-content{
	line-height:1.5em;
	padding:10rpx 0 36rpx 46rpx;
}
.box-item_bottom{
	padding: 25rpx 45rpx 15rpx 0;
}
.box-item_bottom+.box-item_bottom{
	border-top:1rpx dashed #e5e5e5;
}
.box-item_bottom:nth-of-type(6){
	border-top:1rpx dashed #e5e5e5;
}
/*实验室检查栏*/
.box-bd{
    height: 0;
    overflow: hidden;
}
.box-bd.is-show{ 
	height: auto;
	padding-top:30rpx;
}
.box-bd_inner{
    padding: 0 0 25rpx 25rpx;
    font-size:30rpx;
    line-height:62rpx;
    color:#7a7a7a;
    opacity: 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    -webkit-transition: .3s;
    transition: .3s;
}
.is-show .box-bd_inner{
    opacity: 1;
    -webkit-transform: translateY(0);
    transform: translateY(0);
}
.box-item{
    padding: 15rpx 45rpx 15rpx 0;
}
.box-item+.box-item{
    border-top:1rpx dashed #e5e5e5;
}
.iconDot{
	display: inline-block;
	background:#fba559;
	width:12rpx;
	height:12rpx;
	border-radius:100%;
	margin-right: 16rpx; 
}
.box-item.maleHidden{
	display: none;
}

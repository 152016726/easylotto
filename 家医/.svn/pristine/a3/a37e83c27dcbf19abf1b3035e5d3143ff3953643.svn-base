page{
  background: #eee;
}

.op_log{
  height: 100rpx;
  width: 90%;
  background: #fff;
  margin: 20rpx auto; 
  padding: 3%;
  position: relative;
}
.op_log image{
  height:95rpx;
  width: 95rpx;
  border-radius:95rpx;
  border: 1px solid #eee;
}
.op_los{
  width: 400rpx;
  padding: 10rpx;
  /* border: 1px solid #000; */
  display: inline-block;
  vertical-align: top;
}
.op_los view{
  height: 52rpx;
}
.op_los view:first-child{
  font-size: 30rpx;
  color:#747474;
}
.op_los view:nth-child(2){
  color:#979797;
  font-size: 28rpx;
}
.op_dv{
  height: 60rpx;
  width: 140rpx;
  background: #fccdb0;
  color:#bc612a;
  text-align: center;
  line-height: 60rpx;
  border-radius:30rpx;
   font-size: 30rpx;
   display: inline-block;
   vertical-align: top;
   margin-top: 25rpx;
   margin-left: 10rpx;
}
.op_gb{
    height: 60rpx;
  width: 177rpx;
  background: #e5e5e5;
  color:#777;
  text-align: center;
  line-height: 60rpx;
  border-radius:30rpx 0rpx 0rpx 30rpx;
   font-size:30rpx;
   display: inline-block;
   vertical-align: top;
  position: absolute;
  right: -1rpx;
}
.op_lax{
  font-size: 30rpx;
  width: 100%;
  height: 500rpx;
  line-height: 500rpx;
  font-weight: 600;
  text-align: center;
  color:#979797;
}
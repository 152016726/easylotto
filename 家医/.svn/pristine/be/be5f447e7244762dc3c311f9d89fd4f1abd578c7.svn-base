.ai_log {
  width: 740rpx;
  /* border: 1px solid #000; */
  position: relative;
  margin-top: 20rpx;
  color: #7a7a7a;
}
.ai_tis{
  width: 300rpx;
  background: #fff;
  color:#979797;
  border-radius: 30rpx; 
  font-size: 30rpx;
  padding: 2rpx 0;

  margin: 0 auto;
  
}
.ai_ima {
  vertical-align: top;
  width: 75rpx;
  height: 75rpx;
  border: 1px solid #eee;
  background: #979797;
  margin: 10rpx;
  border-radius: 75rpx;
}
.ai_imas {
  vertical-align: top;
  width: 75rpx;
  height: 75rpx;
  border: 1px solid #eee;
  background: #979797;
  margin: 10rpx;
  border-radius: 75rpx;
  position: absolute;
  right: 10rpx;
}
.ai_las {
  display: inline-block;
  margin: 10rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 10rpx;

}

.ai_san {
  width: 0;
  height: 0;
  border: 25rpx solid #fff;
  border-left-color: transparent;
  border-top-color: transparent;
  border-bottom-color: transparent;
  margin-left: -35rpx;
  display: inline-block;
  vertical-align: top;
    position: absolute;
  top:5rpx;
  left:-2rpx;
}
.ai_si {
  width: 0;
  height: 0;
  border: 25rpx solid #5da3fb;
  border-right-color: transparent;
  border-top-color: transparent;
  border-bottom-color: transparent;

  display: inline-block;
  vertical-align: top;
  position: absolute;
  top:5rpx;
  right: -35rpx;
  
}

.ai_fors {
 
  /* border: 1px solid #000; */

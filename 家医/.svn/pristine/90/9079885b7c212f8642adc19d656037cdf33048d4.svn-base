/* pages/info/mediciner/list/list.wxss */
/****已支付待支付样式*/
.nav-tab{
    position:fixed;
    width:100%;
    top:0;
    height: 90rpx;
    line-height:90rpx;
    font-size:28rpx;
    color:#7a7a7a;
    text-align: center;
    background-color:#fff;
    border-top:1rpx solid #b3b3b3;
    z-index:900;
}
.nav-tab_item{
    position:relative;
}
.is-navtab_active{
    font-size:28rpx;
    color:#5394ff;
}
.is-navtab_active:after {
    content: '';
    position: absolute;
    left:45rpx;
    right:45rpx;
    bottom:0;
    height:8rpx;
    width:285rpx;
    background-color:#5394ff;
    border-radius: 4rpx;
}
.mediciner-panel{
    margin:30rpx 25rpx;
    padding: 20rpx 30rpx;
    border-radius: 20rpx;
    background-color: #fff;
    height:120rpx;
    box-shadow:0 2rpx 10rpx 0 rgba(0,0,0,0.16);
   /* -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;*/
}
.mediciner-panel:nth-of-type(1){
    margin-top:115rpx;
}
.avator-img_md{/*共用*/
    background:#bababa;
    /*box-shadow:0 0px 1px 0 rgba(0,0,0,0.16);*/
    width:120rpx;
    height:120rpx;
    border-radius:50%;
    margin-right: 30rpx;
}
.mediciner-panel_bd{
    width:417rpx;
    font-size:28rpx;
    color:#7a7a7a;
}
.mediciner-panel_hd{
    font-size:38rpx;
    color:#000000;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}


/* pages/info/treatment/detail/detail.wxss */
/*信息框样式*/
.box-cont{
    width:700rpx;
    margin: 30rpx 25rpx;
    box-shadow:0 2rpx 10rpx 0 rgba(0,0,0,0.16);
    border-radius:10rpx;
    background:#ffffff;
}
.box-title{
    position:relative;
    padding:25rpx 40rpx 20rpx ;
    font-size:34rpx;
    color:#000;
}
.box-title:before{
    content:" ";
    position:absolute;
    left: 15rpx;
    top:50%;
    height: 40rpx;
    width: 11rpx;
    border-radius: 11rpx;
    background-color: #5394ff;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
}
.box-bd_prim{
    padding: 0 45rpx 25rpx 25rpx;
    font-size:30rpx;
    line-height:62rpx;
    color:#7a7a7a;
}

/*点击展示样式*/
.box-bd{
    height: 0;
    overflow: hidden;
}
.box-bd.is-show{ height: auto;}
.box-bd_inner{
    padding: 0 0 25rpx 25rpx;
    font-size:30rpx;
    line-height:62rpx;
    color:#7a7a7a;
    opacity: 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    -webkit-transition: .3s;
    transition: .3s;
}
.is-show .box-bd_inner{
    opacity: 1;
    -webkit-transform: translateY(0);transform: translateY(0);
}
.box-item{
    padding-right: 45rpx;
}
.box-item+.box-item{
    border-top:1rpx dashed #e5e5e5;
}

.arrows-box{
    width:30rpx;
    height:30rpx;
    background-color: lightblue;
}
.is-arrow_up{background-color: lightpink;}
.box-bd_ft{
    font-size:30rpx;
    color:#5394ff;
}

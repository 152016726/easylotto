page {
  color:#7a7a7a;
}
.block1 {
  padding-top: 40rpx;
  background: #fff;
  margin: 25rpx;
  box-shadow:0 2rpx 10rpx 0 rgba(0,0,0,0.16);
  border-radius:20rpx;
}
.block1 > .clearfox {
  margin-bottom: 30rpx;
  font-size: 38rpx;
  padding: 0 25rpx;
}
.block1 > .clearfox:first-child {
  color:#000;
}
.block1 > .clearfox > .right {
  margin-top:12rpx;
}
.block1 > .bookwrap {
  background-image:linear-gradient(65deg, #ffba66 6%, #fba13c 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 25rpx 35rpx;
  display: flex;
  align-items: center;
}
.block1 > .bookwrap:last-child {
  border-radius: 0 0 20rpx 20rpx;
}
.block1 > .bookwrap .lefttag { 
  flex: 1;
}
.block1 > .bookwrap .rightcontent { 
  font-size:34rpx;
  line-height: 1.4;
  flex: 3;
}
.block2 {
  background: #fff;
}
.block2 .header{
  font-size:34rpx;
  color:#000;
  padding: 30rpx 40rpx;
  border-bottom:1px dashed #979797;
}
.block2 .header .borderleft {
  background:#5394ff;
  border-radius:19rpx;
  width:11rpx;
  height:40rpx;
  display: inline-block;
  margin-right: 12rpx;
  margin-top:3px;
}
.block2 scroll-view {
  padding:80rpx 0;
}
.block2 scroll-view .scroll-wrap {
  display: flex;
  align-items: center;
  padding: 0 20rpx
}
.block2 scroll-view .scroll-wrap .scroll-view-item {
  text-align: center;
  padding: 0 20rpx;
  position: relative;
}
.block2 scroll-view .scroll-wrap .scroll-view-item > radio {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9
}
.block2 scroll-view .scroll-wrap .scroll-view-item image {
  background:#f4f4f4;
  width:140rpx;
  height:140rpx;
  border-radius:100%;
  box-shadow:0 0 30rpx 0 rgba(0,0,0,0.1);
  border: 2px #f4f4f4 solid
}
.block2 scroll-view .scroll-wrap .scroll-view-item .name {
  font-size: 34rpx;
  margin-bottom:10rpx
}
.block2 scroll-view .scroll-wrap .scroll-view-item .namedic {
  font-size: 28rpx;
  color: #b2b2b2;
}
.block2 scroll-view .scroll-wrap .scroll-view-item radio[checked]+.item image {
  border: 2px #fba13c solid;
  box-shadow:0 0 30rpx 0 rgba(255,186,102,0.16);
}
.block2 scroll-view .scroll-wrap .scroll-view-item radio[checked]+.item .name {
  color: #000;
}
.block2 .lz-selected-big-ico {
  margin-left:346rpx;
}
.btn-area {
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  padding:40rpx 28rpx
}
.btn-primary {
  color:#fff;
  font-size:34rpx;
  background:#5394ff;
  border-radius:100rpx;
}
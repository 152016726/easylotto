.page-content_unfixed{padding-bottom: 240rpx;}
/*选择咨询医生*/
.scroll-view_hd{
    padding:25rpx 32rpx 15rpx;
    font-size:28rpx;
    color:#000000;
    background-color: #fff;
}
.scroll-view_hd text{
    font-size: 26rpx;
    color:#ff8801;
}
.scroll-view_middle{
    width: 100%;
    padding:0rpx 0 30rpx 0;
    white-space: nowrap;
    display: flex;
    background-color: #fff;
}
.scroll-view_middle .content{width: 100%;}
.scroll-view_middle .content .box {
    padding: 20rpx 17rpx;
    display: inline-block;
    text-align: center;
    position: relative;
}
.scroll-view_middle .content .box:first-child{
    margin-left:17rpx;
}
.scroll-view_middle .content .box:last-child{
    margin-right:17rpx;
}
.scroll-view_middle .content .box image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 3rpx solid transparent; 
}
.scroll-view_middle .content .box.active image {
    border: 3rpx solid #f67d25;
}
.scroll-view_middle .content .box  .name {
    font-size: 28rpx;
    letter-spacing:-0.82rpx;
    color:#7a7a7a;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    width:120rpx;
}
.scroll-view_middle .content .box.active .content-wap .name {
    color:#000;
}
.scroll-view_middle .content .box .selected-ico {
    display: none;
}
.scroll-view_middle .content .box.active .content-wap .selected-ico {
    position: absolute;
    right:17rpx;
    top:110rpx;
    display: inline-block;
}
.item-title{
    position:relative;
    padding: 25rpx 27rpx 25rpx 73rpx;
    font-size:34rpx;
    color:#000000;
}
.item-title:before{
    content:" ";
    position:absolute;
    left: 48rpx;
    top:50%;
    height: 40rpx;
    width: 11rpx;
    border-radius: 11rpx;
    background-color: #5394ff;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
}
.forminfo{
    /*有咨询医生栏时加上这一项*/
    margin:25rpx;
    border-radius: 20rpx;
    padding-bottom:30rpx;
}
.item-star{
    position: absolute;
    top:31rpx;
    padding-left:9rpx;
    color:#e30044;
}
.input-wrap{
    position:relative;
    height:auto;
    margin: 0 40rpx 25rpx;
    font-size:28rpx;
    color:#7a7a7a;
}
.input-view{
    height:100rpx;
    line-height:100rpx;
    padding: 0 60rpx 0 30rpx;
    /*padding: 17rpx 60rpx 17rpx 25rpx;*/
    border:  1px solid #979797;
    /*边界角的弧度*/
    border-radius: 20rpx;
}
.input-icon_right{
    position:absolute;
    right: 30rpx;
    top:50%;
    transform: translateY(-50%);
}
.error {
    position:absolute;
    font-size:26rpx;
    color:red;
    bottom:-40rpx;
    left: 20rpx
}
.textarea-wrap{
    position:relative;
    margin: 0px 40rpx 30rpx;
    font-size:28rpx;
    color:#7a7a7a;
}
.textarea-view{
    width:auto;
    height:200rpx;
    padding: 20rpx;
    border:  1px solid #979797;
    /*边界角的弧度*/
    border-radius: 20rpx;
}

/*底边栏*/
/*底部固定按钮*/
.page-bottom_fixed{
    position:fixed;
    left:0;
    right: 0;
    bottom:0;
    height:180rpx;
    padding:30rpx 35rpx;
    font-size:28rpx;
    color:#7a7a7a;
    background:#ffffff;
    box-shadow:0 -2rpx 10px 0 rgba(0,0,0,0.16);
    z-index: 1000;
    opacity: 0.9;
}
.page-bottom_fixed .checkbox{
	line-height: 38rpx;
}
.f-c_warn{ 
	color:#ff8801;
	text-decoration: underline;
}
.weui-btn_info{
    color:#fff;
    font-size: 34rpx;
    background:#5394ff;
    border-radius:100rpx;
}
.weui-btn_info:visited,
.weui-btn_info:active{color:#d0d0d0;}
.weui-btn_info[disabled]:not([type]) {
    opacity: 0.5;
    background:#5394ff;
    color:#fff;
}



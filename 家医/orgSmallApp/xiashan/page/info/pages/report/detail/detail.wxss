/*检查*/
.yt-wrap{
	font-size: 30rpx;
	color: #7a7a7a;
}
.wrap-flex{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	justify-content: center;
	width: 100%;
}
.wrap-flex_top{width: 100%;}
.wrap-line1{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
	justify-content: space-between;
	padding:30rpx 25rpx 17rpx 63rpx;
	font-size: 26rpx;
}
.wrap-line2{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
	justify-content: space-between;
	padding:25rpx 25rpx 0rpx 63rpx;
	font-size: 34rpx;
	font-weight: 600;
	color:#000;
}
.wrap-line2_l{
	margin-left: 20rpx;
	font-size: 28rpx;
}
.wrap-line3{
	padding:19rpx 25rpx 22rpx 63rpx;
	font-size: 28rpx;
	color:#7a7a7a;
}
.wrap-middle_check{
	width:700rpx;
	margin:34rpx auto;
	border:1rpx soild #e8e8e8;
	border-radius:10rpx;
	box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.16);
	background-color: #fff;
}
.wrap-title{
	position: relative;
	padding:25rpx 34rpx;
	font-size:34rpx;
	font-weight: 600;
	color:#000;
}
.wrap-title:before{
    content: " ";
    position: absolute;
    left:12rpx;
    top:50%;
    width:22rpx;
    height:40rpx;
    background:#5394ff;
    border-radius:8rpx;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(0.5) translateY(-50%); /*压缩及垂直居中*/
    transform: scaleX(0.5) translateY(-50%);
}
.wrap-content{
	line-height:1.5em;
	padding:10rpx 36rpx 46rpx;
}
.wrap-bottom_inspect{
	position: fixed;
	top:189rpx;
	bottom: 0;
	width:700rpx;
	border:1rpx soild #e8e8e8;
	border-radius:10rpx;
	box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.16);
	background-color: #fff;
	font-size:30rpx;
	color:#7a7a7a;
}
.box-small{
	width:146rpx;
	height:35rpx; 
	line-height: 35rpx;
	font-size:28rpx;
	color:#ff8801;
	text-align: center;
	border:2rpx solid #ff8801;
	border-radius:100rpx;
}
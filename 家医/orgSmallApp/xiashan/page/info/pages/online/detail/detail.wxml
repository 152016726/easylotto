<view class="yt-wrap">
	<view class="flex-between wrap-top">
		<view class="font-blue_s">
			提问对象：
			<text>{{detail.recrFdocName?detail.recrFdocName:(detail.recrTeamName?detail.recrTeamName:detail.recrOrgName)}}</text>
		</view>
		<view class="font-grey_xs">{{detail.createTime}}</view>
	</view>
	<view class="wrap-middle font-grey_xs">
		<view class="font-black_l padding_xs">
			{{detail.topic}}
		</view>
		<view class="wrap-line1 font-grey_s">
			{{detail.disorder}}
		</view>	
		<view class="margin-top_xs padding_xs">
			发病时间：<text>{{detail.diseaseTime}}</text>
		</view>
		<view class="padding_xs">
			就诊经历：<text>{{detail.therapyRecode?detail.therapyRecode:'无'}}</text>
		</view>
	</view>
	<view class="wrap-middle font-grey_s">
		<view class="font-black_l wrap-title">
			<view class="padding_xs">医生回复：</view>
		</view>
		<view class="wrap-line2">
			{{detail.repayContent?detail.repayContent:'无'}}
		</view>	
	</view>
</view>





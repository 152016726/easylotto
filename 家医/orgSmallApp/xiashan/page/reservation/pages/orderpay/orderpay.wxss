/* pages/register/orderpay/orderpay.wxss */
.orderpay-content{
    padding:60rpx 0 160rpx 0;
}
.tip-cell_time{
    position:fixed;
    left:0;
    top:0;
    width:100%;
    height:60rpx;
    line-height: 60rpx;
    text-align: center;
    background-color: #fff3e8;
    z-index:100;
}
.time-ico_pay{
    vertical-align: middle;
    margin-right: 5rpx;
    margin-top:-6rpx;
}
.info-box{
    margin:30rpx 25rpx;
    width:700rpx;
    background:#ffffff;
    box-shadow:0 2rpx 10rpx 0 rgba(0,0,0,0.16);
    border-radius:20rpx;
}
.info-title{
    position:relative;
    padding:40rpx 50rpx 25rpx 42rpx;
    font-size:34rpx;
    color:#000;
}
.info-title:before{
    content:" ";
    position:absolute;
    left: 19rpx;
    top:50rpx;
    bottom:25rpx;
    height: 40rpx;
    width: 11rpx;
    border-radius: 11rpx;
    background-color: #5394ff;
}
.info-title:after{
    content:" ";
    position:absolute;
    bottom:0;
    right:0;
    height:1px;
    color:#d9d9d9;
    left:9px
}
.info-bd_user--outer{
    position: relative;
    padding:20rpx 34rpx 15rpx 28rpx;
    font-size:30rpx;
    color:#7a7a7a;
}
.avator-img_prim{
    width: 120rpx;
    height: 120rpx;
    margin-right:48rpx;
    border-radius: 50%;
    vertical-align: middle;
    background: #f3f3f3;
}
.info-cell_user{
    position: relative;
    height:76rpx;
    line-height: normal;
}
.label_sm{width:112rpx;}
.user-name{
    font-size:38rpx;
    color:#000000;
}
.fc-sm_tip{
    font-size:28rpx;
    color:#ff8801;
}
.phone-icon{
    margin-right:5rpx;
    margin-top:-5rpx;
    vertical-align: middle;
}
.vertl-center_ico{
    position:absolute;
    right:0;
    top:50%;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
}
.info-cell_order{
    position:relative;
    height:110rpx;
    line-height: normal;
    /*line-height: 110rpx;*/
    margin-left:41rpx;
    padding-right:34rpx;
    font-size:30rpx;
    color:#000;
}
.info-cell_order+.info-cell_order{border-top:1rpx dashed #979797;}
.label-l_order{
    min-width:119rpx;
    padding-right:10rpx;
    font-size:30rpx;
    color:#7a7a7a;
    text-align:right;
}
.depart-icon{
    right: 34rpx;
}
/*底部固定按钮*/
.fixed-area_bottom--pay{
    position:fixed;
    left:0;
    bottom:0;
    width:695rpx;
    height:140rpx;
    font-size: 40rpx;
    color:#7a7a7a;
    line-height: 140rpx;
    background:#ffffff;
    box-shadow:0 -2rpx 10px 0 rgba(0,0,0,0.16);
    padding:0 30rpx 0 25rpx;
    justify-content: space-between;
    z-index: 1000;
}
.f-c_warn{ color:#ff8801;}
.weui-btn_info{
    color:#fff;
    font-size: 34rpx;
    background:#5394ff;
    border-radius:100rpx;
}
.weui-btn_info:visited{color:#d0d0d0;}
.weui-btn_info:active{color:#d0d0d0;}
.fixed-area_bottom--pay .weui-btn_info{
    width: 320rpx;
    /*width:400rpx;*/
    height: 88rpx;
    line-height: 88rpx;
    text-align:center;
}
.fixed-area_bottom--pay .weui-btn_info[disabled]:not([type]) {
    opacity: 0.5;
    background:#5394ff;
    color:#fff;
}
/*二维码弹窗*/
.dialog-content_code{
    width: 600rpx;
    padding-bottom: 34rpx;
    text-align: center;
    background: #fff;
    border-radius: 11rpx;
}
.dialog-title_code{
    padding: 34rpx 0 10rpx;
    font-size: 33rpx;
    color:#1d1d1d;
}
.dialog-main_code{
    width:440rpx;
    height:440rpx;
    margin: 36rpx auto 14rpx;
    background: #bababa;
}




page {
  background-color: #f3f3f3;
}
.search {
  padding:14rpx 20rpx;
  /*padding-right:160rpx;*/
  position:relative;
}
.search .input-wap {
  position:relative;
}
.search .input-wap .search-ico {
  position:absolute;
  top:18rpx;
  left:18rpx;
}
.search .input-wap .delete-small-line-ico {
  position:absolute;
  top:14rpx;
  right:20rpx;
}
.search .input-wap input {
  background-color: #fff;
  border-radius:200rpx;
  border: solid 1px #a0a0a0;
  font-size: 26rpx;
  padding-left: 55rpx;
  padding-right: 70rpx;
  height:58rpx;
}
.search .location-wap {
  position:absolute;
  color: #525252;
  font-size: 26rpx;
  top: 25rpx;
  right: 10rpx;
  padding-left:35rpx;
}
.search .cancel-wap {
  position:absolute;
  color: #525252;
  font-size: 26rpx;
  top: 25rpx;
  right: 30rpx;
}
.search .location-wap .location-ico {
  margin-right: 5rpx;
  position:absolute;
  top:0rpx;
  left:3rpx;
}
.search .location-wap .city-wap {
  display:inline-block;
  width:100rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.list {
  background-color: #fff;
}
.list .item {
  padding: 36rpx 30rpx 40rpx;
  position: relative;
  padding-left: 213rpx;
  border-bottom: 1rpx solid #e8e8e8;
  height:127rpx;
  overflow: hidden;
}
.list .item image {
  width: 158rpx;
  height: 127rpx;
  position: absolute;
  top: 36rpx;
  background-color: #e5e5e5;
  left:30rpx;
  border-radius: 6rpx;
}
.list .item .content {
  position:relative;
}
.list .item .content .name {
	font-size: 36rpx;
	letter-spacing: 0rpx;
	color: #3a3a3a;
  line-height:36rpx;
  overflow: hidden;
  min-height:72rpx;
}
.list .item .content .address {
	font-size: 28rpx;
	letter-spacing: 0rpx;
	color: #999999;
  margin-top: 24rpx;
  line-height: 28rpx;
  overflow: hidden
}
.sign-role {
	padding: 10rpx;
}
.sign-role .orgfontc {
	color: #dd781e;
}
.sign-role .teamClass{
	min-height: 15rpx;
}
.sign-role > view {
	/* position: relative; */
	margin-bottom: 14rpx;
}
.sign-role > view.sixbitspl {
    /* padding-left: 5.2rpx; */
}
.sign-role > view.fourbitspl {
    /* padding-left: 3.6rpx; */
}
.sign-role > view.sixbitspl > view,
.sign-role > view.fourbitspl > view {
    border-bottom: 1px #ddd solid;
    display: -webkit-box;
    display: flex;
}
.sign-role > view.sixbitspl > text,
.sign-role > view.fourbitspl > text {
	/* position: absolute;
	left: 0;
	top: 0; */

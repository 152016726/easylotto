page{background-color: #F6F8FC;}
/*搜索栏*/
.weui-search-bar{
	padding:20rpx 25rpx;
	background-color: #F6F8FC;
	border-top: 0;
	border-bottom: 0;
}
.weui-search-bar__form{
	border-radius: 30rpx;
	background-color: #fff;
	border: 1rpx solid #e8e8e8;
}
.weui-search-bar__box{height: 60rpx;padding: 0 60rpx;}
.weui-icon-search_in-box{left:20rpx;top:14rpx;}
.weui-search-bar__input{height: 60rpx;line-height: 56rpx;}
.placeholder{color:#999;font-size: 28rpx;}    
.weui-icon-clear{padding: 15rpx 25rpx;}
.weui-search-bar__label{border-radius: 30rpx;line-height: 56rpx;}
.weui-icon-search{margin-right: 16rpx;}
.cell_sign{padding:5rpx 20rpx;}
.search_result .cell_sign+.weui-cells{margin-top:0;}
.is-active{color:#09f!important;}
.search_null{padding: 50% 0;text-align: center;}
/*列表切换栏*/
.nav{border-bottom: 1rpx solid #e8e8e8;}
.nav-item{ 
    position: relative; 
    flex: auto; 
    background-color: #fff;
    text-align: center; 
    line-height: 90rpx; 
} 
.nav-item_active{ color: #09f;} 
.nav-item_active:after{ 
    content: ""; 
    display: block; 
    position: absolute; 
    bottom: 0; 
    left: 100rpx; 
    right: 100rpx; 
    height: 4rpx; 
    background: #09f; 
} 
.icon-img{margin-bottom:-6rpx;margin-right:8rpx;}
.box-border{
    display: inline-block;
    padding-left:5rpx;
    padding-right: 5rpx;
    font-size: 26rpx;
    border:1rpx solid #999;
    border-radius: 20rpx;
    margin-left:15rpx;
}

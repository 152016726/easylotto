    width:120rpx;
    height:120rpx;
    margin:25rpx 0 0;
    box-shadow:0 2rpx 40rpx 0 rgba(0,0,0,0.16);
    border-radius:50%;
}
.member-selcted{
    position: absolute;
    top: 34rpx;
    right:30rpx;
    display: none;
}
.radio-box[checked]+.radio-main .member-selcted{display: block;}
.member-name{
    margin-top:-6rpx;
    font-size:32rpx;
    color:#fff;
}
.member-age{
    margin-bottom:15rpx;
    font-size:26rpx;
    color:#f7ff88;
}
.org-name{
    width:250rpx;
    font-size:26rpx;
    color:#ffffff;
}
.org-name+.lz-right-white-ico{margin-bottom:-2rpx;}
.add-child{
    display: inline-block;
    position:relative;
    width:220rpx;
    height:270rpx;
    margin: 20rpx 17rpx;
    padding:0 30rpx 0 20rpx;
    text-align: center;
    background:#ffffff;
    box-shadow:0 4rpx 10rpx 0 #d3d3d3;
    border-radius:20rpx;
}
.add-child .add-text{
    margin-top:20rpx;
    font-size:32rpx;
    color:#7a7a7a;
}
.radio-group_scroll .right-icon{

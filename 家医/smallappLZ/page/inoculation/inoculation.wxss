/*成员列表样式*/
.radio-group_scroll{
    height: 353rpx;
    white-space: nowrap;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    -webkit-align-items: center;
}
.radio-main{
    display: inline-block;
    position:relative;
    width:240rpx;
    height:270rpx;
    margin: 20rpx 17rpx;
    padding:0 20rpx 0 10rpx;
    text-align: center;
    background-image:linear-gradient(165deg, #ebebeb 0%, #98b0bd 100%);
    border-radius:20rpx;
}

.radio-box[checked]+.radio-main{
    box-shadow:0 4rpx 10rpx 0 #b4d2fa;
    background-image:linear-gradient(165deg, #59a1f4 0%, #76cfff 100%);
}
.avator-img_md{/*共用*/

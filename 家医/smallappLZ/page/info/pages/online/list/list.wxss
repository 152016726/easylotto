/* page/online/pages/list/list.wxss */
/*搜索栏*/
.search {
	background-color: #fff;
    padding:23rpx 20rpx;
    position:relative;
}
.search .input-wap {position:relative;}
.search .input-wap .search-ico {
    position:absolute;
    top:20rpx;
    left:18rpx;
}
.search .input-wap .delete-small-line-ico {
    position:absolute;
    top:16rpx;
    right:20rpx;
    z-index: 100;
}
.search .input-wap input {
    background-color: #fff;
    border-radius:200rpx;
    font-size: 26rpx;
    color:#000;
    padding-left: 55rpx;
    padding-right: 70rpx;
    height:66rpx;
    box-shadow:4rpx 2rpx 20rpx 0 #d6dfef;
}
.placeholder{font-size: 26rpx;color:#7a7a7a;}
.search .cancel-wap {
    position:absolute;
    top: 34rpx;
    right: 30rpx;
    padding-right: 15rpx;
    color: #000;
    font-size: 26rpx;
}
/*选择栏*/
.flex-between{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    justify-content: space-between;
}
.background_default{background-color: #fff;}
.nav-tab{
	justify-content: center;
	width: 375rpx;
	height: 90rpx;
	font-size:28rpx;
	color:#7a7a7a;
	background: #fff;
	border: none;
}
.tab-cont{min-width: 142rpx;}
/*列表栏*/
.scroll-view{
    border-top:1rpx solid #e8e8e8;
}
.scroll-box{
	padding:24rpx 40rpx 32rpx;
	background: #fff;
	box-shadow:0rpx 2rpx 10rpx 0rpx rgba(0,0,0,0.16); 
}
.font-blue_s{
	color:#5394ff;
	font-size:28rpx;
}
.text-ellipsis{
	width: 566rpx;
	overflow:hidden;
	white-space:nowrap;
	text-overflow:ellipsis;
}
.text-ellipsis_s{
    width: 370rpx;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis; 
}
/*底边栏*/
/*底部固定按钮*/
.page-bottom_fixed{
    position:fixed;
    left:0;
    right: 0;
    bottom:0;
    padding:30rpx 35rpx 42rpx;
    font-size:28rpx;
    background-color: #fff;
    opacity: 0.9;
}
button:after{border:0;}
.weui-btn_info{
    color:#fff;
    font-size: 34rpx;
    background:#5394ff;
    border-radius:100rpx;
}
.weui-btn_info:visited,
.weui-btn_info:active{color:#d0d0d0;}
.weui-btn_info[disabled]:not([type]) {
    opacity: 0.5;
    background:#5394ff;
    color:#fff;
}
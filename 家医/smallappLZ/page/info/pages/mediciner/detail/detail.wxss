.box-content{
    width:700rpx;
    margin:37rpx 25rpx 0;
    padding-top:10rpx;
    box-shadow:0 4rpx 10rpx 0 rgba(0,0,0,0.16);
    border-radius:20rpx 20rpx 0 0;
    background-color: #fff;
}
.item-title{
    position:relative;
    padding: 25rpx 27rpx 25rpx 73rpx;
    font-size:34rpx;
    color:#000000;
}
.item-title:before{
    content:" ";
    position:absolute;
    left: 48rpx;
    top:50%;
    height: 40rpx;
    width: 11rpx;
    border-radius: 11rpx;
    background-color: #5394ff;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
}
.box-content_bd{
    padding: 0 27rpx 30rpx 48rpx;
    font-size: 28rpx;
    color:#7a7a7a;

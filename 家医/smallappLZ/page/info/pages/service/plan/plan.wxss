page {
  background: #f6f6f6;
}

.pl_log {
  width: 100%;
  height: 260rpx;
  /* border: 1px solid #000; */
  padding: 20rpx 0;
}

.pl_fes {
  width: 98%;
  padding: 2%;
  height: 120rpx;
  margin-top: 6rpx;
  background: #fff;
}

.pl_fes image {
  width: 115rpx;
  height: 115rpx;
  display: inline-block;
  vertical-align: top;
}

.pl_fes .pl_ca {
  width: 500rpx;
  height: 130rpx;
  display: inline-block;
  margin-left: 30rpx;
  overflow: hidden;
}

.pl_ca view:first-child {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pl_ca view:nth-child(2) {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pl_ca view:nth-child(3) {
  font-size: 24rpx;
  color: #979797;
}

.pl_hz view:nth-child(2) {
  font-size: 36rpx;
  margin-left: 10rpx;
  margin-top: -180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pl_hz view:nth-child(3) {
  font-size: 26rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pl_hz view:nth-child(4) {
  margin-top: 10rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pl_gd {
  display: inline-block;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #979797;
  font-size: 36rpx;
  vertical-align: top;
  margin-top: 50rpx;
  margin-left: 100rpx;
}

.pl_hz {
  width: 300rpx;
  height: 186rpx;
  display: inline-block;
  /* border: 1px solid #000; */
  margin-left: 40rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  color: #fff;
}

.pl_hz image {
  width: 300rpx;
  height: 180rpx;
}

.pl_jq {
  font-size: 30rpx;
  padding: 10rpx;
  color: #5b5e60;
}

.pl_ln {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #000;
}

.pl_las {
  width: 100%;
}

.pl_wan {
  margin-top: 8rpx;
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  background: #fff;
  color: #979797;
}

/* pages/fuwu/fuwu.wxss */
page{
  background: #eee;

}
.fu_log {
  padding: 10rpx;
  /* border: 1px solid #000; */
  margin-bottom: 20rpx;
  background: #fff;
}

.fu_log image {
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid #000; */
  border-radius: 10rpx;
}

.fu_te {
  display: inline-block;
  width: 580rpx;
  /* border: 1px solid #000; */
  margin-left: 30rpx;
}

.fu_te view:first-child {
  font-size: 33rpx;
  font-weight: 600;
}
.fu_te view{
  height: 40rpx;
}
.fu_te view:nth-child(2) {
  font-size: 26rpx;
  color: #979797;
  padding: 5rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.fu_te view:nth-child(3){
  color:#008be8;
  font-size: 30rpx;
  border: 1px solid #008be8;
  padding: 5rpx;
  border-radius:30rpx; 
  width: 100rpx;
  text-align: center;
}
.fu_ma{
  background: #fff;
  /* border: 1px solid #000; */
  padding: 10rpx;
  margin-bottom: 10rpx;
}
.fu_ma view{
  height: 40rpx;
  line-height: 40rpx;
}
.fu_ma view:first-child{
  font-size: 30rpx;

}
.fu_ma view:nth-child(2){
  font-size: 28rpx;
  color:#979797;
}
.fu_pa{
  padding: 10rpx;
  height: 888rpx;
  background: #fff;
}
.fu_pa view:first-child{
  font-size: 30rpx;
  padding: 10rpx 0rpx;
  font-weight: 600;
border-bottom:1px solid #979797; 
}
.fu_pa view:nth-child(2){
  padding-top:10rpx;
  text-indent: 2em;
  font-size: 29rpx;

}